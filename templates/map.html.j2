<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/static/css/style.css" rel="stylesheet">
    <title>Teeworlds map editor</title>
</head>
<body>
    <div class="editor">
        <div class="menu-left">
            {% for i, group in enumerate(twmap.groups) %}
                <div class="group">
                    {{ group.name }} #{{ i }}
                    {% for layer in group.layers %}
                        <div class="layer">
                            {{ layer.kind() if layer.name == '' else layer.name }}
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
        <div class="map">
        </div>
    </div>
    <script src="/static/js/map.js"></script>
</body>
</html>
